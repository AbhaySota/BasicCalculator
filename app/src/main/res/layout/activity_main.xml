<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:padding="5dp">

    <!-- CALCULATOR SCREEN USED FOR DISPLAYING CALCULATIONS -->
    <TextView
        android:id="@+id/CalcPlayGround"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="@string/calc_beginning_text"
        android:background="@color/white2"
        android:layout_weight="0.70"
        android:padding="10dp"
        android:textSize="48sp"
        android:gravity="end|bottom" />

    <!-- LINEAR LAYOUT TO DISPLAY THE DIGITS AND ALL THE BASIC MATHEMATICAL OPERATIONS -->

    <LinearLayout
        android:id="@+id/Buttons"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.30"
        android:background="@color/white2"
        android:backgroundTint="@color/pewter_blue"
        android:orientation="vertical"
        >

        <!-- FIRST ROW TO COVER BUTTONS -->
        <LinearLayout
            android:id="@+id/Row1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="7"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_margin="5dp"
                android:backgroundTint="@color/steel_teal"
                android:onClick="BtnClick"/>
            <Button
                android:id="@+id/btn8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="8"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_margin="5dp"
                android:backgroundTint="@color/steel_teal"
                android:onClick="BtnClick"/>
            <Button
                android:id="@+id/btn9"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="9"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_margin="5dp"
                android:backgroundTint="@color/steel_teal"
                android:onClick="BtnClick"/>
            <Button
                android:id="@+id/btnDivide"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="/"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_margin="5dp"
                android:backgroundTint="@color/steel_teal"
                android:onClick="BtnClick"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/Row2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="4"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_margin="5dp"
                android:backgroundTint="@color/steel_teal"
                android:onClick="BtnClick"/>
            <Button
                android:id="@+id/btn5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="5"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_margin="5dp"
                android:backgroundTint="@color/steel_teal"
                android:onClick="BtnClick"/>
            <Button
                android:id="@+id/btn6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="6"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_margin="5dp"
                android:backgroundTint="@color/steel_teal"
                android:onClick="BtnClick"/>
            <Button
                android:id="@+id/btnProduct"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="*"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_margin="5dp"
                android:backgroundTint="@color/steel_teal"
                android:onClick="BtnClick"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/Row3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="1"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_margin="5dp"
                android:backgroundTint="@color/steel_teal"
                android:onClick="BtnClick"/>
            <Button
                android:id="@+id/btn2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="2"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_margin="5dp"
                android:backgroundTint="@color/steel_teal"
                android:onClick="BtnClick"/>
            <Button
                android:id="@+id/btn3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="3"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_margin="5dp"
                android:backgroundTint="@color/steel_teal"
                android:onClick="BtnClick"/>
            <Button
                android:id="@+id/btnSubtract"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="-"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_margin="5dp"
                android:backgroundTint="@color/steel_teal"
                android:onClick="BtnClick"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/Row4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn0"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="0"
                android:layout_weight="2"
                android:gravity="center"
                android:layout_margin="5dp"
                android:backgroundTint="@color/steel_teal"
                android:onClick="BtnClick"/>
            <Button
                android:id="@+id/btnClear"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="CLR"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_margin="5dp"
                android:backgroundTint="@color/steel_teal"
                android:onClick="BtnClick"/>
            <Button
                android:id="@+id/btnSum"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="+"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_margin="5dp"
                android:backgroundTint="@color/steel_teal"
                android:onClick="BtnClick"/>
        </LinearLayout>
        <Button
            android:id="@+id/btnEqual"
            android:layout_width="match_parent"
            android:text="="
            android:layout_height="0dp"
            android:layout_weight="1"
            android:backgroundTint="@color/steel_teal"
            android:onClick="BtnClick"/>

    </LinearLayout>
</LinearLayout>